<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tdhite.dnsqache"
    android:versionCode="5"
    android:versionName="0.84" >

    <uses-sdk android:minSdkVersion="9" android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <supports-screens
        android:anyDensity="true"
        android:largeScreens="true"
        android:normalScreens="true"
        android:smallScreens="true" />

    <application
        android:name="com.tdhite.dnsqache.QacheApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <service
            android:name="com.tdhite.dnsqache.QacheService"
            android:enabled="true"
            android:label="QacheService" />

        <receiver
            android:name="com.tdhite.dnsqache.BootUpReceiver"
            android:enabled="true"
            android:permission="android.permission.RECEIVE_BOOT_COMPLETED" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.tdhite.dnsqache.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tdhite.dnsqache.ViewLogActivity"
            android:label="@string/title_activity_view_log" >
        </activity>
        <activity
            android:name="com.tdhite.dnsqache.ConfigureProxyActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name="com.tdhite.dnsqache.ConfigureDNSActivity"
            android:label="@string/title_activity_configure"
            android:parentActivityName="com.tdhite.dnsqache.MainActivity" 
            android:windowSoftInputMode="stateHidden" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.tdhite.dnsqache.MainActivity" />
        </activity>
    </application>

</manifest>
